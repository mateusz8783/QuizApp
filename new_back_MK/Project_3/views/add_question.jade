extends layout

block content
 h2.page-header Add Question
 p Fill out all of the required fields to add new question
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 form(method='post', action='/add',enctype='multipart/form-data')
  .form-group
   label Question
   input.form-control(name='question', type='text', placeholder='Enter Text')
  .form-group
   label Answer 1
   input.form-control(name='answer_1', type='text', placeholder='Enter Text')
  .form-group
   label Answer 2
   input.form-control(name='answer_2', type='text', placeholder='Enter Text')
  .form-group
   label Answer 3
   input.form-control(name='answer_3', type='text', placeholder='Enter Text')
  .form-group
   label Correct Answer
   input.form-control(name='corr_ans', type='number', placeholder='Enter Number')
  .form-group
   label Image (optional)
   input.form-control(name='profileimage', type='file')
  input.btn.btn-primary(type='submit', name='submit',value='Add Question')